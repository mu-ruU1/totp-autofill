{
  "name": "TOTP Autofill",
  "description": "TOTP 自動入力拡張機能",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": "img/icon/icon128.png"
  },
  "icons": {
    "16": "img/icon/icon32.png",
    "32": "img/icon/icon48.png",
    "48": "img/icon/icon48.png",
    "128": "img/icon/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "script/content.js"
      ]
    }
  ]
}
